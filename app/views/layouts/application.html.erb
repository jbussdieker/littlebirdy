<!DOCTYPE html>
<html>
<head>
  <title>Slit</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <div class="main-content">
      <div class="container">
      <ul class="nav nav-pills pull-right">
        <li class="active"><a href="/">Home</a></li>
      </ul>
      </div>
      <div class="navbar">
        <div class="navbar-inner">
          <div class="container">
            <div class="nav-collapse">
              <ul class="nav">
                <li class="<%= 'active' if params[:controller] == 'home' %>">
                  <%= link_to 'Home', "/" %>
                </li>
                <% if user_signed_in? %>
                  <li class="<%= 'active' if params[:controller] == 'numbers' %>">
                    <%= link_to 'Numbers', numbers_path %>
                  </li>
                  <li class="<%= 'active' if params[:controller] == 'mailboxes' %>">
                    <%= link_to 'Mailboxes', mailboxes_path %>
                  </li>
                  <li class="<%= 'active' if params[:controller] == 'callers' %>">
                    <%= link_to 'Callers', callers_path %>
                  </li>
                  <li class="<%= 'active' if params[:controller] == 'scripts' %>">
                    <%= link_to 'Scripts', scripts_path %>
                  </li>
                  <li class="<%= 'active' if params[:controller] == 'routes' %>">
                    <%= link_to 'Routes', routes_path %>
                  </li>
                <% else %>
                  <li>
                    <%= link_to('Login', new_user_session_path) %>
                  </li>
                <% end %>
              </ul>
            </div>
            <% if user_signed_in? %>
            <div class="btn-group pull-right">
              <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
                <i class="icon-user"></i> <%= current_user.email %>
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to('Profile', edit_user_registration_path) %></li>
                <li class="divider"></li>
                <li><%= link_to('Sign Out', destroy_user_session_path, :method => :delete) %></li>
              </ul>
            </div>
            <% end %>
          </div>
        </div>
      </div>
      <div class="container">
        <% flash.each do |name, msg| %>
          <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
            <a class="close" data-dismiss="alert">&#215;</a>
            <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
          </div>
        <% end %>
        <%= yield %>
      </div>
    </div>
  </div>
</body>
</html>

